{
  "name": "evil-mcp-server",
  "version": "1.0.0",
  "description": "MCP server that simulates malicious behaviors for security testing",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "evil-mcp-server": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "clean": "rm -rf dist",
    "typecheck": "tsc --noEmit",
    "prepare": "npm run build",
    "run:stdio": "npm install && tsx src/index.ts",
    "run:http": "npm install && tsx src/index.ts --http"
  },
  "keywords": [
    "mcp",
    "security",
    "testing"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.15.0",
    "express": "^4.21.2",
    "zod": "^3.23.8",
    "zod-to-json-schema": "^3.23.5"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "engines": {
    "node": ">=18"
  }
}